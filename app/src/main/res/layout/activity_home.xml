    <TextView
        android:id="@+id/txtPlantsHomeActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Plants Home Activity Page"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#00BF00"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageViewHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toBottomOf="@id/txtPlantsHomeActivity"
        android:src="@drawable/divider"/>

    <ImageView
        android:id="@+id/imageViewCircles"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:src="@drawable/circles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewHorizontal" />

    <ImageView
        android:id="@+id/imageViewCirclesTwo"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/circles"
        android:layout_marginRight="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewHorizontal" />

    <ImageView
        android:id="@+id/imageViewHorizontalTwo"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewCircles"
        android:src="@drawable/divider"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/river_leaves"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewHorizontalTwo" />

    <ImageView
        android:id="@+id/imageViewHorizontalThree"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:src="@drawable/divider"/>

    <Button
        android:id="@+id/btnPlantsHousePlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plants House Plan"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewHorizontalThree"/>

    <Button
        android:id="@+id/btnMapFunctionality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Map Functionality"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnPlantsHousePlan"/>

    <Button
        android:id="@+id/btnPlantsAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Plants Animation"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnMapFunctionality"/>

    <Button
        android:id="@+id/btnGreenHeroes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Green Characters"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnPlantsAnimation"/>

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Camera Functionality"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnGreenHeroes"/>

    <Button
        android:id="@+id/btnVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Video Functionality"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnCamera"/>

</androidx.constraintlayout.widget.ConstraintLayout>